[alias]
  ci = commit
  co = checkout
  st = status
  diffindex = diff-index -p -M -b -w --color HEAD
  c = cherry-pick
  rprune = remote prune origin
  m = merge --no-ff --no-commit

[color]
  branch      = auto
  diff        = auto
  interactive = auto
  status      = auto
  ui          = auto
  pager       = true

[core]
  excludesfile = /home/blaxter/.gitignorefilelist
  pager = less -FRSX

### Color customizations ###

[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green

[color "diff"]
  meta = blue blink reverse
  frag = magenta bold
  old  = red bold
  new  = green bold
  whitespace = red

[color "status"]
  added     = yellow
  changed   = green
  untracked = cyan

[giggle]
  compact-mode = true
  main-window-maximized = true
  main-window-geometry = 0x0+0+0

[user]
        email = blaxter@gmail.com
            name = Jesús García Sáez
[push]
        default = upstream

